@model SportsStore.WebUI.Models.MenuInfo

<div data-role="navbar">

@foreach (var link in Model.Categories) {
    @Html.RouteLink(link, new {
           controller = "Product",
           action = "List",
           category = link,
           page = 1
       }, new {
           data_transition = "fade",
           @class = (link == Model.SelectedCategory ? " ui-btn-active" : null)
       })
}

</div>